{
  "mcpServers": {
    "fortigate-mcp": {
      "command": "python",
      "args": [
        "-m",
        "src.fortigate_mcp.server_http",
        "--host",
        "0.0.0.0",
        "--port",
        "8814",
        "--path",
        "/fortigate-mcp",
        "--config",
        "/media/workspace/fortigate-mcp-server/config/config.json"
      ],
      "env": {
        "FORTIGATE_MCP_CONFIG": "/media/workspace/fortigate-mcp-server/config/config.json"
      }
    },

    
    "FortiGateMCP": {
      "url": "http://0.0.0.0:8814/fortigate-mcp/",
      "transport": "http"
    }
  }
}
